<% if @port != 80 -%>
  Listen <%= @port %>
<% end -%>
<VirtualHost *:<%= @port %>>
    ServerAdmin webmaster@localhost
  DocumentRoot <%= @root_directory %>
    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>
  <Directory <%= @root_directory %>>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>
</VirtualHost>
